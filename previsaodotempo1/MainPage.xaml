                Grid.Column="0"
                FontSize="10"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                VerticalOptions="Center"/>

        <Label    x:Name="labelChuva"
                TextColor="White"
                Grid.Row="0"
                Grid.Column="1"
                FontSize="10"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                VerticalOptions="Center"/>

                
        <Label    x:Name="labelUmidade"
                TextColor="White"
                Grid.Row="1"
                Grid.Column="1"
                FontSize="10"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                VerticalOptions="Center"/>

