                <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label  x:Name="LabelCidade"
                        TextColor="White"
                        Grid.Row="0"
                        FontSize="25"
                        HorizontalOptions="Fill"
                        HorizontalTextAlignment="Center"
                        VerticalOptions="Center"/>
                        

                <Label  x:Name="labelTemperatura"
                        TextColor="White"
                        Grid.Row="1"
                        FontSize="25"
                        HorizontalOptions="Fill"
                        HorizontalTextAlignment="Center"
                        VerticalOptions="Center"/>

                <Label  x:Name="LabelDescrição"
                        TextColor="White"
                        Grid.Row="2"
                        FontSize="25"
                        HorizontalOptions="Fill"
                        HorizontalTextAlignment="Center"
                        VerticalOptions="Center"/>
            
        </Grid>                     
   </Frame>
