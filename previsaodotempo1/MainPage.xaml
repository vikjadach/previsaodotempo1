        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
                <ColumnDefinition Whide="70"/>
                <ColumnDefinition Whide="*"/>
        </Grid.ColumnDefinitions>

        <Label  Text="Força"
                TextColor="White"
