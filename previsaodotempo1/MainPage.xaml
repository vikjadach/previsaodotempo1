                Grid.Column="0"
                FontSize="10"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                VerticalOptions="Center"/>


        <Label  x:Name="LabelForça"
                TextColor="White"
                Grid.Row="0"
                Grid.Column="1"
                FontSize="10"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                VerticalOptions="Start"/>  

        <Label  x:Name="LabelDireção"
                TextColor="White"
